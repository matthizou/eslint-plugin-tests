{
  "name": "eslint-plugin-tests",
  "version": "0.2.0",
  "main": "index.js",
  "description": "Linting rules",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "test:ci": "jest rules",
    "deploy": "semantic-release",
    "lint": "eslint rules index.js",
    "create-new-rule": "npx hygen generator new-rule"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-plugin": "^4.2.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^0.14.3",
    "jest": "^28.1.1",
    "jest-runner-eslint": "^1.0.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "semantic-release": "^19.0.2",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=8.3 <=9 || >= 10.*"
  },
  "license": "ISC",
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "rules/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.+(json|md)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthizou/eslint-plugin-tests"
  },
  "dependencies": {
    "@babel/parser": "^7.18.5"
  }
}
