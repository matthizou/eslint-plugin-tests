{
  "name": "eslint-plugin-tests",
  "version": "1.3.0",
  "main": "index.js",
  "description": "Linting rules",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "lint": "eslint rules index.js",
    "create-new-rule": "npx hygen generator new-rule"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-eslint-plugin": "^1.4.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.14.0",
    "husky": "^0.14.3",
    "jest": "^24.5.0",
    "jest-runner-eslint": "^0.7.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "standard-version": "^6.0.1"
  },
  "engines": {
    "node": ">=8.3 <=9 || >= 10.*"
  },
  "license": "ISC",
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "rules/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "*.+(json|md)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      {
        "displayName": "test",
        "testEnvironment": "node"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/rules/**/*.test.js"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matthizou/eslint-plugin-tests"
  },
  "dependencies": {
    "babylon": "6.18.0"
  }
}
